<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SetActivity"
    android:background="#F6F1F1">

    <LinearLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#216824"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/back"
            android:layout_width="30sp"
            android:layout_height="40sp"
            android:layout_gravity="center"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/ic_baseline_arrow_back_24">

        </ImageView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20sp"
            android:layout_marginTop="2dp"
            android:padding="15sp"
            android:text="Settings"
            android:textColor="#fff"
            android:textSize="22dp"
            android:textStyle="normal">

        </TextView>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5sp"
        android:orientation="horizontal">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="10sp"
            android:src="@drawable/img_3">

        </de.hdodenhof.circleimageview.CircleImageView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="2sp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="pooja patel"
                android:id="@+id/name"
                android:textColor="#000"
                android:textSize="20sp"
                android:layout_marginStart="10dp"
                android:textStyle="bold">

            </TextView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="life is a blank book......"
                android:textColor="#9E8A8A"
                android:textSize="17sp"
                android:id="@+id/mgs"
                android:layout_marginStart="10dp"
                android:textStyle="normal">

            </TextView>

        </LinearLayout>



    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:padding="3dp"
        android:background="#DFD4D4">

    </View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5sp"
        android:layout_marginTop="20sp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="30sp"
            android:layout_height="match_parent"
            android:layout_marginStart="20sp"
            android:src="@android:drawable/presence_audio_away">

        </ImageView>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="2sp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Account"
                android:textColor="#513D3D"
                android:textSize="20sp"
                android:layout_marginStart="10dp"
                android:textStyle="normal">

            </TextView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Privacy,security,change number"
                android:textColor="#9E8A8A"
                android:textSize="17sp"

                android:layout_marginStart="10dp"
                android:textStyle="normal">

            </TextView>

        </LinearLayout>



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5sp"
        android:layout_marginTop="20sp"
        android:orientation="horizontal">

        <de.hdodenhof.circleimageview.CircleImageView

            android:layout_width="30sp"
            android:layout_height="50dp"
            android:layout_marginStart="20sp"
            android:src="@android:drawable/presence_audio_away">

        </de.hdodenhof.circleimageview.CircleImageView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="2sp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Chats"
                android:textColor="#513D3D"
                android:textSize="20sp"
                android:layout_marginStart="10dp"
                android:textStyle="normal">

            </TextView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Privacy,security,change number"
                android:textColor="#9E8A8A"
                android:textSize="17sp"

                android:layout_marginStart="10dp"
                android:textStyle="normal">

            </TextView>

        </LinearLayout>



    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5sp"
        android:layout_marginTop="20sp"
        android:orientation="horizontal">

        <de.hdodenhof.circleimageview.CircleImageView

            android:layout_width="30sp"
            android:layout_height="50dp"
            android:layout_marginStart="20sp"
            android:src="@android:drawable/presence_audio_away">

        </de.hdodenhof.circleimageview.CircleImageView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="2sp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Notification"
                android:textColor="#513D3D"
                android:textSize="20sp"
                android:layout_marginStart="10dp"
                android:textStyle="normal">

            </TextView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Privacy,security,change number"
                android:textColor="#9E8A8A"
                android:textSize="17sp"

                android:layout_marginStart="10dp"
                android:textStyle="normal">

            </TextView>

        </LinearLayout>



    </LinearLayout>



</LinearLayout>

